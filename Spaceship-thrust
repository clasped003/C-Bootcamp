#include <stdio.h>

enum thrust{
  OFF,
  LOW = 5,
  MEDIUM = 9,
  HIGH = 12,
  MAXIMUM = 20
};
int main() {
    enum thrust stop = OFF;
    enum thrust initial = LOW;
    enum thrust med = MEDIUM;
    enum thrust hi = HIGH;
    enum thrust max = MAXIMUM;
    
    puts("*Spaceship thrust logger*");
    puts("Logging thrust for ship outbound trajectory.");
    puts("Thrust log:\n");
    printf("-->: Set thrust ready to go: %d\n", stop);
    sleep(1);
    printf("-->: Set thrust for Take Off: %d\n", max);
    sleep(2);
    printf("-->: Set thrust for Ionosphere: %d\n", med);
    sleep(3);
    printf("-->: Set thrust for Deep Space: %d\n", initial);
    sleep(2);
    printf("\n\n--Confirmation of successful Launch Squeuence--");
    return 0;
}
